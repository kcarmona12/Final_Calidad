@model Transaccion
@{
   //var transaccion = (Transaccion)Model;
   //var cuentitas = (Cuenta)ViewBag.Cuenta;
}
<h1>Editar transaccion </h1>
<div class="row">
    <div class="col-6">
        <form action="/transaccion/editar" enctype="multipart/form-data" method="post">

            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" name="CuentaId" value="@Model.CuentaId" />

            <div class="form-group">
                <label>Tipo</label>
                <select name="Tipo" class="form-control">
                    <option value="">-- Selecciona una opcion --</option>
                    @foreach (var item in ViewBag.Tipos)
                    {
                        if (Model.Tipo == item)
                        {
                            <option value="@item" selected>@item</option>
                        }
                        else
                        {
                            <option value="@item">@item</option>
                        }
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Fecha y hora</label>
                <input type="datetime-local" class="form-control" name="FechaHora" value="@Model.FechaHora" />
            </div>

            <div class="form-group">
                <label>Motivo</label>
                <input class="text" name="Motivo" value="@Model.Motivo" />
            </div>

            <div class="form-group">
                <label>Monto</label>
                <input type="number" class="form-control" name="Amount" value="@Model.Amount" />
            </div>

            <button class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>